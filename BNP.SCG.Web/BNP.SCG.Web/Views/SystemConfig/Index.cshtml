@using System.Security.Claims
@model BNP.SCG.Web.Models.SystemConfig

<div class="app-content container center-layout mt-2">
    <div class="content-overlay"></div>
    <div class="content-wrapper">
        <div class="content-body">

            <!-- Basic form layout section start -->
            <section id="basic-form-layouts">
                <div class="row match-height">
                    <div class="col-md-12">

                        <div class="card">
                            <div class="card-content">
                                <div class="card-body">
                                    <ul class="nav nav-tabs nav-top-border no-hover-bg nav-justified">
                                        <li class="nav-item">
                                            <a class="nav-link active" id="active-tab1" data-toggle="tab"
                                               href="#active1" aria-controls="active1" aria-expanded="true">
                                                <i class="ft-monitor"></i> ข้อความ Popup
                                            </a>
                                        </li>
                                        @*  <li class="nav-item">
                                        <a class="nav-link" id="link-tab1" data-toggle="tab" href="#link1"
                                        aria-controls="link1" aria-expanded="false">Database Config</a>
                                        </li>*@
                                    </ul>
                                    <br />
                                    <form id="myForm" method="post" asp-action="EditSystemConfig"
                                          asp-controller="SystemConfig">
                                        <div class="tab-content px-1 pt-1">

                                            <div role="tabpanel" class="tab-pane active" id="active1"
                                                 aria-labelledby="active-tab1" aria-expanded="true">

                                                <div class="form-body">

                                                    <div class="form-group row">
                                                        <label class="col-md-2 label-control"
                                                               for="projectinput1">
                                                            หน้าเมนูการลงทะเบียน
                                                        </label>
                                                        <div class="controls col-md-10 mx-auto">
                                                            <fieldset class="form-group">
                                                                <textarea asp-for="register_message" class="form-control" rows="3" ></textarea>
                                                            </fieldset>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label class="col-md-2 label-control"
                                                               for="projectinput1">
                                                            หน้าเมนูชั่งหนัก
                                                        </label>
                                                        <div class="controls col-md-10 mx-auto">
                                                            <fieldset class="form-group">
                                                                <textarea asp-for="weight_in_message" class="form-control" rows="3" ></textarea>
                                                            </fieldset>
                                                        </div>
                                                    </div>

                                                    <div class="form-group row">
                                                        <label class="col-md-2 label-control"
                                                               for="projectinput1">หน้าเมนูชั่งเบา</label>
                                                        <div class="controls col-md-10 mx-auto">
                                                            <fieldset class="form-group">
                                                                <textarea asp-for="weight_out_message" class="form-control" rows="3" ></textarea>
                                                            </fieldset>
                                                        </div>
                                                    </div>

                                                    <div class="form-group row">
                                                        <label class="col-md-2 label-control"
                                                               for="projectinput1">แจ้งเตือนเปอร์เซ็นต์เกินค่าที่กำหนด</label>
                                                        <div class="controls col-md-10 mx-auto">
                                                            <fieldset class="form-group">
                                                                <textarea asp-for="over_percentage" class="form-control" rows="3" ></textarea>
                                                            </fieldset>
                                                        </div>
                                                    </div>
                                                 
                                                </div>

                                                <div class="form-actions text-right">
                                                    <button type="submit" class="btn btn-success btn-lg">
                                                        <i class="la la-check-square-o"></i> บันทึก
                                                    </button>
                                                    <a asp-controller="Home" asp-action="Index"
                                                       class="btn btn-danger btn-lg">
                                                        <i class="ft-x"></i> ยกเลิก
                                                    </a>
                                                </div>

                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- // Basic form layout section end -->



        </div>
    </div>
</div>

@section Scripts{
    <script>

    </script>
}